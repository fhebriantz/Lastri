<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="350dp">
            <ImageView
                android:id="@+id/img"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:scaleType="centerCrop"
                android:src="@drawable/intro_route" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/slide_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/slide_desc"
                android:layout_alignLeft="@+id/slide_desc"
                android:layout_alignStart="@+id/slide_desc"
                android:gravity="center_horizontal"
                android:text="@string/slide_3_tittle"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_intro_tittle"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/slide_desc"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="155dp"
                android:layout_marginLeft="190dp"
                android:text="@string/slide_3_desc"
                android:textColor="@android:color/white"
                android:textSize="@dimen/font_size_intro_desc" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>